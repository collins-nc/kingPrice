@page "/"
@using KingPrice.Abstraction.Dtos
@inject IUserApiClient UserApiClient
@inject IJSRuntime Js
@rendermode InteractiveServer

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">KingPrice Users</h2>
        <button class="btn btn-success" @onclick="OpenCreateForm">
            <i class="bi bi-person-plus-fill"></i> Add User
        </button>
    </div>

    @if (users == null)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!users.Any())
    {
        <div class="card card-body text-center bg-light">
            <p class="mb-0">No users found in the system. <button class="btn btn-link p-0" @onclick="OpenCreateForm">Create one now</button>.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Groups</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">#@user.Id</span></td>
                            <td>
                                <div class="fw-bold">@user.FirstName @user.LastName</div>
                            </td>
                            <td>
                                @if (user.Groups.Any())
                                {
                                    @foreach (var group in user.Groups)
                                    {
                                        <span class="badge rounded-pill bg-info text-dark me-1">@group</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">No Groups</span>
                                }
                            </td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => OpenEditForm(user)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteUser(user.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<UserForm @ref="userFormComponent" OnSaved="RefreshUsers" />

@code {
    private List<UserResponse>? users;
    private UserForm userFormComponent = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        users = await UserApiClient.GetAllUsersAsync();
    }

    private async Task RefreshUsers()
    {
        await LoadUsers();
        StateHasChanged();
    }

    private void OpenCreateForm() => userFormComponent?.ShowCreate();

    private void OpenEditForm(UserResponse user) => userFormComponent?.ShowEdit(user);

    private async Task DeleteUser(int id)
    {
        var confirmed = await Js.InvokeAsync<bool>("confirm", "Are you sure you want to delete this user?");
        if (confirmed)
        {
            var success = await UserApiClient.DeleteUserAsync(id);
            if (success)
            {
                await RefreshUsers();
            }
        }
    }
}